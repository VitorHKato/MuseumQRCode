<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/MainEditTextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="@string/user"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/MainTextViewTitle"
        app:layout_constraintStart_toStartOf="@+id/MainTextViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/MainTextViewTitle" />

    <TextView
        android:id="@+id/MainTextViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/title"
        android:textSize="24dp"
        app:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/MainEditTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/MainEditTextUser"
        app:layout_constraintTop_toBottomOf="@+id/MainEditTextUser" />

    <Button
        android:id="@+id/MainButtonLogin"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="login"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="@+id/MainEditTextPassword"
        app:layout_constraintStart_toStartOf="@+id/MainEditTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/MainEditTextPassword" />

    <Button
        android:id="@+id/MainButtonSignUp"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="signUp"
        android:text="@string/signup"
        app:layout_constraintStart_toStartOf="@+id/MainButtonLogin"
        app:layout_constraintTop_toBottomOf="@+id/MainButtonLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>